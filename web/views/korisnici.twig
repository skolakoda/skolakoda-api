{% extends "layout.html" %}

{% block content %}
<div class="container">
  <p>Korisnici:</p>

  <table>
  {% for row in korisnici|batch(5, 'No item') %}
    <tr>
      {% for korisnik in row %}
        <td>{{ korisnik.ime }}</td>
      {% endfor %}
    </tr>
  {% endfor %}
  </table>

  <ul>
  {% for korisnik in korisnici %}
    <li> {{korisnik.id}} | {{korisnik.email}} | {{korisnik.prijavljen}} | {{korisnik.ime}} | {{korisnik.telefon}} </li>
  {% endfor %}
  </ul>

</div>
{% endblock %}
