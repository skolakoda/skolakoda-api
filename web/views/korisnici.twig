{% extends "layout.html" %}

{% block head %}
  {{ parent() }}
  <style type="text/css">
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    td,
    th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
{% endblock %}

{% block content %}
  <div class="container">
    <p>Korisnici:</p>

    <table>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Prijavljen</th>
        <th>Ime</th>
        <th>Telefon</th>
      </tr>
      <tr>
        {% for korisnik in korisnici %}
          <tr>
            <td>{{korisnik.id}}</td>
            <td>{{korisnik.email}}</td>
            <td>{{korisnik.prijavljen}}</td>
            <td>{{korisnik.ime}}</td>
            <td>{{korisnik.telefon}}</td>
          </tr>
        {% endfor %}
      </table>

    </div>
  {% endblock %}
